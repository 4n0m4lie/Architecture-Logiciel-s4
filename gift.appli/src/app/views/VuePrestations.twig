{% extends "Skeleton.twig" %}

{% block content %}

    <div id="prestations-div">
        <p class="titre">Prestations</p>
        <a href={{ url_for ('prestations')}}> trie de base</a>
        <a href={{ url_for ('prestationsTrierAsc')}}> trier par prixCroisant</a>
        <a href={{ url_for ('prestationsTrierDesc')}}> trier par prixDecroisant</a>
        <div id="prestations-liste">
            {% for p in prestations %}
                <p class="prestation"> <a href= {{ url_for ('prestation',{},{'id' :p.id })}}>{{ p.libelle }} - {{ p.description }} - {{ p.tarif }}</a></p>
                <img src="{{ base_path() }}/img/{{ p.img }}" height="50" width="50" alt="{{ p.img }}">
            {% endfor %}
        </div>

        <a href="#" onclick="window.history.go(-1)" class="bouton">Retour</a>
    </div>

{% endblock %}