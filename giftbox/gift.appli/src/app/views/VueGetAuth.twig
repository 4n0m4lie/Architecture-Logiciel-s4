{% extends "Skeleton.twig" %}

{% block content %}
    <div>
        <p class="titre">Authentification</p>
        <form action="/auth/" method="post" id="form-auth">
            <div><label for="login"></label><input type="email" id="login" name="login" placeholder="login"></div>
            <div><label for="password"></label><input type="password" id="password" name="password" placeholder="password"></div>
            <button  type="submit">Authentification</button>
        </form>

        <a href="#" onclick="window.history.go(-1)" class="bouton">Retour</a>
    </div>
{% endblock %}